//finding x*y by doing x + x + x + ... + x (y times)
def mult(x: Z, y: Z): Z = {

    var total: Z = 0
    var i: Z = 0

    while (i != y) {
        //what should the loop invariant be?

        total = total + x
        i = i + 1
    }

    return total
}

